<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <SolidColorBrush Color="Red" x:Key="redStyle"/>
    <SolidColorBrush Color="Green" x:Key="greenStyle"/>
    <col:ArrayList x:Key="colors">
        <sys:String>Крастный</sys:String>
        <sys:String>Зеленый</sys:String>
    </col:ArrayList>

    <col:ArrayList x:Key="fonts">
        <TextBlock Text="Arial"/>
        <TextBlock Text="Times New Roman"/>
        <TextBlock Text="Verdana"/>
    </col:ArrayList>

    <col:ArrayList x:Key="font_sizes">
        <TextBlock Text="12"/>
        <TextBlock Text="14"/>
        <TextBlock Text="16"/>
    </col:ArrayList>

</ResourceDictionary>